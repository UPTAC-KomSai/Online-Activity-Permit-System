<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Add New Room</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to "Home", root_path %>
            </li>
            <li>
                <a>Rooms</a>
            </li>
            <li class="active">
                <strong>Add New Room</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Add New Room</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <%= form_tag("create", method: "post", :class=>"wizard-big") do %>
                        <div class="form-group">
                            <%= label_tag(:room, "Room: ", :class=>"col-sm-2 control-label") %>
                            
                            <div class="col-sm-10">
                                <%= text_field_tag(:room, "",:class=>"form-control") %>
                            </div>
                        </div><br/><br/>
                        
                        <div class="form-group">
                            <%= label_tag(:code, "Room Code: ", :class=>"col-sm-2 control-label") %>
                            
                            <div class="col-sm-10">
                                <%= text_field_tag(:code, "",:class=>"form-control") %>
                            </div>
                        </div><br/><br/>
                        
                        <div class="form-group">
                            <%= label_tag(:in_charge, "Facility-in-Charge: ", :class=>"col-sm-2 control-label") %>
                
                            <div class="col-sm-10">
                                <%= select_tag(:in_charge, options_for_select(@users.collect{ |u| [u.name, u.id] }), :class=>"form-control m-b") %>
                            </div>
                        </div><br/><br/>
                        
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <%= submit_tag("Submit", :class=>"btn btn-primary") %>
                            </div>
                        </div>
                        <br/>
                    <% end %>
                </div>
            </div>

            <div class="form-group">
                <%= label_tag(:code, "Room Code: ") %>
                <%= text_field_tag :code,"", class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= label_tag(:in_charge, "Facility in Charge: ") %>
                <%= select_tag(:in_charge, options_for_select(@users.collect{ |u| [u.name, u.id] })) %>
            </div>
            <%= submit_tag("Submit", :class=>"btn btn-success") %>

        </div>
    </div>
</div>

